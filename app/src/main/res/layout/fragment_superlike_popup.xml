                                android:layout_centerInParent="true"
                                android:paddingStart="@dimen/_5sdp"
                                android:paddingEnd="@dimen/_5sdp"
                                android:paddingBottom="@dimen/_1sdp"
                                android:text="@string/or"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/newLightGray"
                                android:includeFontPadding="false"/>

                            <View
                                android:id="@+id/view2"
                                android:layout_width="match_parent"
                                android:layout_height="0.8dp"
                                android:background="@color/newLightGray"
                                android:layout_toEndOf="@+id/orTv"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/boost_btn"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_38sdp"
                            android:background="@drawable/ic_pink_background">

                            <TextView
                                android:id="@+id/cancelTv"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:text="@string/cancel_capi"
                                android:textSize="@dimen/_13sdp"
                                android:textStyle="bold"
                                android:textColor="@color/white"/>

