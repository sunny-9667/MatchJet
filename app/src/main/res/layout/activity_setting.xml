<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ActivitiesFragments.Settings.Setting_A">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#F5F5F5">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_weight="1"
            app:contentInsetLeft="0dp"
            android:elevation="5dp"
            app:contentInsetStart="0dp"
            android:layout_alignParentTop="true"
            android:background="@color/light_white">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageButton
                    android:layout_width="32dp"
                    android:layout_height="48dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:src="@drawable/ic_back"
                    android:id="@+id/back_btn"
                    android:scaleType="fitStart"
                    android:background="@color/transparent"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/settings"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:layout_toEndOf="@+id/back_btn"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="20dp"
                    />


            </RelativeLayout>

    </androidx.appcompat.widget.Toolbar>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:paddingStart="@dimen/_11sdp"
            android:paddingEnd="@dimen/_11sdp"
            android:layout_below="@+id/toolbar">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_1sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    android:layout_marginTop="@dimen/_11sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:padding="10dp">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:id="@+id/one_layout">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/swiping_in"
                                android:textStyle="bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/pink_color"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/my_current_location"
                                android:textStyle="bold"
                                android:textSize="@dimen/_9sdp"
                                android:layout_alignParentEnd="true"
                                android:textColor="@color/dark_gray"/>

                        </RelativeLayout>

                        <com.github.aakira.expandablelayout.ExpandableRelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="10dp"
                            app:ael_expanded="true"
                            app:ael_duration="500"
                            app:ael_interpolator="bounce"
                            app:ael_orientation="vertical"
                            android:layout_below="@+id/one_layout"
                            android:id="@+id/expandable_layout">


                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="10dp"
                                android:gravity="center"
                                android:id="@+id/two_layout">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_centerVertical="true">

                                    <ImageView
                                        android:layout_width="24dp"
                                        android:layout_height="24dp"
                                        app:tint="@color/pink_color"
                                        android:src="@drawable/ic_location_marker"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/my_current_location"
                                        android:textSize="@dimen/_9sdp"
                                        android:layout_centerVertical="true"
                                        android:textColor="@color/black"
                                        android:layout_marginStart="5dp"/>

                                </LinearLayout>


                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:theme="@style/SCBSwitch"
                                    android:id="@+id/current_loction_switch"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="5dp"
                                android:layout_below="@+id/two_layout">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/add_new_location"
                                    android:textSize="@dimen/_9sdp"
                                    android:padding="5dp"
                                    android:gravity="start"
                                    android:layout_marginEnd="50dp"
                                    android:id="@+id/new_location_txt"
                                    android:layout_centerVertical="true"
                                    android:textColor="@color/pink_color"/>

                                <androidx.appcompat.widget.SwitchCompat
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:theme="@style/SCBSwitch"
                                    android:id="@+id/selected_location_switch"/>

                            </RelativeLayout>

                        </com.github.aakira.expandablelayout.ExpandableRelativeLayout>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@color/white">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/show_me"
                            android:textStyle="bold"
                            android:textSize="@dimen/_11sdp"
                            android:textColor="@color/pink_color"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/men"
                                android:textSize="@dimen/_9sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:theme="@style/SCBSwitch"
                                android:id="@+id/men_switch"/>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/women"
                                android:textSize="@dimen/_9sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:theme="@style/SCBSwitch"
                                android:id="@+id/women_switch" />

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/maximum_distance"
                                android:textStyle="bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/pink_color"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mile"
                                android:textSize="@dimen/_9sdp"
                                android:id="@+id/distance_txt"
                                android:textColor="@color/black"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                        <com.zhouyou.view.seekbar.SignSeekBar
                            android:id="@+id/distance_bar"
                            android:layout_width="match_parent"
                            android:layout_height="16dp"
                            app:ssb_progress="10000"
                            app:ssb_min="5"
                            app:ssb_max="10000"
                            app:ssb_thumb_radius="10dp"
                            android:paddingTop="20dp"
                            app:ssb_show_thumb_text="false"
                            app:ssb_show_section_text="false"
                            android:minHeight="16dp"
                            app:ssb_second_track_color="@color/pink_color"
                            app:ssb_thumb_color="@color/pink_color"
                            app:ssb_track_color="@color/gainsboro"
                            app:ssb_track_size="5dp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/age_range"
                                android:textStyle="bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/pink_color"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/year"
                                android:textSize="@dimen/_9sdp"
                                android:id="@+id/age_range_txt"
                                android:textColor="@color/black"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                        <com.appyvet.materialrangebar.RangeBar
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:id="@+id/age_seekbar"
                            app:mrb_connectingLineColor="@color/pink_color"
                            app:mrb_connectingLineWeight="6dp"
                            app:mrb_rangeBar="true"
                            app:mrb_tickHeight="0dp"
                            app:mrb_thumbSize="12dp"
                            app:mrb_thumbColor="@color/pink_color"
                            app:mrb_pinTextColor="@color/transparent"
                            app:mrb_pinColor="@color/transparent"
                            app:mrb_rangeBarColor="@color/graycolor"
                            app:mrb_tickStart="18"
                            app:mrb_tickEnd="75"
                            />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/dark_gray"
                    android:text="@string/ager_preference_txt"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/langage_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/language"
                                android:textSize="@dimen/_9sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="English"
                                android:textSize="@dimen/_9sdp"
                                android:id="@+id/selected_language_txt"
                                android:layout_alignParentEnd="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/show_me_on_binder"
                                android:textSize="@dimen/_9sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:theme="@style/SCBSwitch"
                                android:id="@+id/show_me_on_binder"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textSize="@dimen/_9sdp"
                    android:textColor="@color/dark_gray"
                    android:text="@string/show_on_Card_text"/>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/don_t_show_my_age"
                                android:textSize="@dimen/_9sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:theme="@style/SCBSwitch"
                                android:id="@+id/hide_age"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/make_my_distance_invisible"
                                android:textSize="@dimen/_9sdp"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                            <androidx.appcompat.widget.SwitchCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentEnd="true"
                                android:theme="@style/SCBSwitch"
                                android:id="@+id/hide_distance"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/show_distance_in"
                                android:textStyle="bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/pink_color"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/mi"
                                android:textSize="@dimen/_9sdp"
                                android:id="@+id/distance_type_txt"
                                android:textColor="@color/black"
                                android:layout_alignParentEnd="true"/>

                        </RelativeLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_28sdp"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginStart="@dimen/_15sdp"
                            android:layout_marginEnd="@dimen/_15sdp"
                            android:layout_marginTop="@dimen/_15sdp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/km"
                                android:id="@+id/km_btn"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/black"
                                android:background="@color/white"
                                android:gravity="center"
                                android:layout_weight="1"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/mi"
                                android:id="@+id/mile_btn"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/white"
                                android:background="@drawable/button_rounded_background"
                                android:gravity="center"
                                android:layout_weight="1"/>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:textColor="@color/black"
                    android:text="@string/contact_us"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/help_support_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_5sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:gravity="center"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/help_support"
                                android:textSize="@dimen/_11sdp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:textColor="@color/black"/>

                        </RelativeLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp"
                        android:background="@color/white">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/legal"
                                android:textStyle="bold"
                                android:textSize="@dimen/_11sdp"
                                android:textColor="@color/pink_color"/>


                        </RelativeLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:text="@string/licenses"
                            android:textStyle="bold"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:background="@drawable/d_ripple_effect"
                            android:paddingBottom="5dp"
                            android:id="@+id/licences_txt"
                            android:textColor="@color/dimgray"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/privacy_policy"
                            android:textStyle="bold"
                            android:textSize="@dimen/_9sdp"
                            android:gravity="start"
                            android:includeFontPadding="false"
                            android:background="@drawable/d_ripple_effect"
                            android:paddingBottom="5dp"
                            android:id="@+id/privacy_policy_txt"
                            android:textColor="@color/dimgray"/>

                        <TextView
                            android:id="@+id/terms_condition_txt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/d_ripple_effect"
                            android:gravity="start"
                            android:paddingBottom="5dp"
                            android:includeFontPadding="false"
                            android:text="@string/terms_of_services"
                            android:textColor="@color/dimgray"
                            android:textSize="@dimen/_9sdp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_37sdp"
                    app:cardCornerRadius="@dimen/_2sdp"
                    app:cardElevation="@dimen/_1sdp"
                    android:layout_marginTop="@dimen/_10sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/white"
                        android:gravity="center_vertical"
                        android:id="@+id/blockedList_btn">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Blocked Users"
                            android:textSize="@dimen/_11sdp"
                            android:paddingStart="15dp"
                            android:paddingEnd="15dp"
                            android:textColor="@color/black"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


                <androidx.cardview.widget.CardView
